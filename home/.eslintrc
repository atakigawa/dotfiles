{
  "extends": [
    "standard",
    "plugin:vue/essential"
  ],
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "comma-dangle": ["error", "only-multiline"],
    "space-before-function-paren": ["error", "never"],
    "no-irregular-whitespace": ["error", {"skipComments": true}],
    "no-trailing-spaces": ["error", {"ignoreComments": true}]
  }
}
